<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProyectoDAM" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0F9314</item>
        <item name="colorPrimaryVariant">#21AA26</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- estilo para los textinput -->
    <style name="TextInput" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/cyan</item>
    </style>
    <!--estilo para el toolbar-->
    <style name="ToolbarName" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>
</resources>